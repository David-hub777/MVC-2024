@model IEnumerable<MVC_2024.Models.MarcaModel>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th colspan="3">
                @Html.DisplayNameFor(model => model.NomMarca)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        
        @foreach (MarcaModel item in Model) {
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomMarca)
            </td>
            <td >
                <a class="btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
